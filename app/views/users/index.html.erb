<% provide(:title, 'All users') %>
<h1>All users</h1>

<ul class="users">
    <% index = 0 %>
    <% while (index < @users.length) do%>
      <div class="row">
            <div class="col-sm-4">
                <%= image_tag @users[index].photo.url(:medium) %><br><br>
                <%= link_to @users[index].name, user_path(@users[index])%> 
                <% index += 1 %>
            </div>
            <div class="col-sm-4">
                <% if index != @users.length %>
                    <%= image_tag @users[index].photo.url(:medium) %><br><br>
                    <%= link_to @users[index].name, user_path(@users[index])%> 
                    <% index += 1 %>
                <% end %>
            </div>
            <div class="col-sm-4">
                <% if index != @users.length %>
                    <%= image_tag @users[index].photo.url(:medium) %><br><br>
                    <%= link_to @users[index].name, user_path(@users[index])%> 
                    <% index += 1 %>
                <% end %>
            </div>
        </div>
        
    <%end%>
</ul>
