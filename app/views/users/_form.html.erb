<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages', object: @user %>

  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-control' %>

  <%= f.label :email %>
  <%= f.email_field :email, class: 'form-control' %>

  <%= f.label :password %>
  <%= f.password_field :password, class: 'form-control' %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation, class: 'form-control' %>
  
  <%= f.label :phone %>
  <%= f.text_field :phone, class: 'form-control' %>

  <%= f.label :birthday %>
  <%= f.text_field :birthday, class: 'form-control' %>
  
  <%= f.label :year %>
  <%= f.text_field :year, class: 'form-control' %>
  
  <%= f.label "Favorite Programming Language" %>
  <%= f.text_field :favprog, class: 'form-control' %>
  
  <%= f.label "Favorite Food" %>
  <%= f.text_field :food, class: 'form-control' %>
  
  <% if yield(:require_code) == 'True' %>
    <%= f.label :access_code %>
    <%= f.text_field "access_code", class: 'form-control' %>
  <% end %>

  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>